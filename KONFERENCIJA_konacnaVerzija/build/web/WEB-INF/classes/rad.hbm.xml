<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="javaKod.Rad" table="radovi">
        <id name="idRada" type="int" column="id_rada">
            <generator class="identity" />
        </id>
        <property name="imeRada" column="ime_rada" type="string" /> 
        <property name="naucnaOblast" column="naucna_oblast" type="string" /> 
        <property name="apstrakt" column="apstrakt" type="string" /> 
        <property name="koautor1" column="koautor1" type="string" /> 
        <property name="koautor2" column="koautor2" type="string" /> 
        <property name="datumPrijaveRada" column="datum_prijave_rada" type="string" /> 
        <property name="uploadRada" column="upload_rada" type="string" /> 
        <many-to-one 
            cascade="save-update" 
            class="javaKod.Autor"
            name="autor">
        </many-to-one>
        <one-to-one name="odluka" class="javaKod.Odluka" cascade="save-update"></one-to-one>
    </class>
</hibernate-mapping>






